{
  "name": "opensoldat-launcher",
  "productName": "OpenSoldat",
  "version": "1.8.0",
  "description": "Launcher for OpenSoldat",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "test": "jest",
    "format": "prettier --write \"./**/*.{js,jsx,ts,tsx,css,less,scss,vue,json,gql,md,html}\""
  },
  "keywords": [],
  "author": {
    "name": "Jan Różański"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "extraResource": "opensoldat",
        "icon": "assets/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "opensoldat_launcher"
          }
        },
        {
          "name": "@electron-forge/maker-zip"
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "devContentSecurityPolicy": "",
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/index.tsx",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/preload.ts"
                  }
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.65",
    "@electron-forge/maker-deb": "^6.0.0-beta.65",
    "@electron-forge/maker-rpm": "^6.0.0-beta.65",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.65",
    "@electron-forge/maker-zip": "^6.0.0-beta.65",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.65",
    "@fortawesome/fontawesome-svg-core": "^6.2.0",
    "@fortawesome/free-solid-svg-icons": "^6.2.0",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.1.2",
    "@types/lodash": "^4.14.186",
    "@types/react": "^18.0.21",
    "@types/react-color": "^3.0.6",
    "@types/react-dom": "^18.0.6",
    "@types/shortid": "0.0.29",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "css-loader": "^6.7.1",
    "electron": "^19.1.2",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.1.2",
    "lodash": "^4.17.21",
    "mobx": "^6.6.2",
    "mobx-react": "^7.5.3",
    "mobx-utils": "^6.0.5",
    "prettier": "2.7.1",
    "react": "^18.2.0",
    "react-color": "^2.19.3",
    "react-dom": "^18.2.0",
    "react-draggable": "^4.4.5",
    "react-flag-kit": "^1.1.1",
    "react-select": "^5.4.0",
    "react-tabs": "^5.1.0",
    "react-toastify": "^9.0.8",
    "react-tooltip": "^4.2.21",
    "shortid": "^2.2.16",
    "style-loader": "^3.3.1",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  }
}
